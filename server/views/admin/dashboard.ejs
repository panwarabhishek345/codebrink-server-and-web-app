<body id="body" class="wrapper" style="overflow: hidden;">

    <div class="container-fluid h-100">
            <div class="row h-100">
                <aside class="col-12 col-md-2 p-0 bg-dark">
                    <nav class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start py-2">
                        <div class="collapse navbar-collapse">
                            <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                                <li class="nav-item">
                                    <p id="sidebar-head-text">CODEBRINK</p>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link pl-0" href="#" onclick="getAllArticles();"><i class="fab fa-readme fa-lg sidebar-li-ico"></i> <span class="d-none d-md-inline">All Articles</span></a>
                                </li>
                                <li class="nav-item" onclick="logout();" >
                                    <a class="nav-link pl-0" href="#"><i class="fas fa-sign-out-alt fa-lg sidebar-li-ico"></i> <span class="d-none d-md-inline">Logout</span></a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </aside>

                <main class="col bg-faded py-3" style="overflow: scroll;"">
                                    <!-- Page Content -->
                    <div id="content" style="width:inherit;height:100vh">
    
                        <div id="page-container" style="height:inherit;">
                            
                        <% if(page === "all-articles"){ %>
                            <%- include('menu-pages/all-articles',articles); %>
                        <%} else {%>
                            <%- include('menu-pages/article-editor'); %>
                        <%}%>
                        </div>
                
                        <div id="progressbar" class="loader"></div>
                
                    </div>
                   
                </main>
            </div>
        </div>

